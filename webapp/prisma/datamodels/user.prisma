model User {
  id        String  @id @default(cuid())
  email     String @unique
  pseudo    String @unique
  password  String
  firstname String?
  lastname  String?
  sex       SEX?
  latitude  Float?
  longitude Float?
  age Int?
  photo String?
  description String?
  nationality String?
  kindOfTrip TransportType @default(BIKE)
  isVisibled Boolean?
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

enum TransportType{
    BIKE
    BACKPACK
    TRAIN
    CAR
    ERASMUS
    NOMAD
    OTHER
}

enum SEX{
    MAN
    WOMAN
    OTHER
    }
